@model IEnumerable<Course>
@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
    ViewData["Title"] = "Search Courses";
}

<h2>Search Courses</h2>

<div class="container mt-5">
    <div class="row mt-5">
        <div class="card">
            <div class="card-body">
                <label class="form-label">Search for a course</label>
                <input type="text" id="search" class="form-control" name="name" oninput="SearchCourse(this.value)" />
                <div class="row">
                    <div class="col text-center">
                        <a asp-action="SearchCourse" class="btn btn-primary">Clear Filter</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div id="coursesSearch-container">
        @Html.Partial("_Partial/Courses_partial", Model)
    </div>
</div>

<div class="modal" tabindex="-1" id="del" style="direction: ltr;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    let deleteId = 0;

    function setDeleteId(id) {
        deleteId = id;
    }

    function confirmDelete() {
        window.location.href = `/Course/DeleteCourse/${deleteId}`;
    }
</script>