@model IEnumerable<Course>

@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
    ViewData["Title"] = "Course List";
}

<h2>Course List</h2>

<div class="container mt-5" style="direction: ltr;">
    <div class="row mt-5">
        <div class="card">
            <div class="card-body">
                <form asp-action="CreateNewCourse" method="post" enctype="multipart/form-data">
                    <div class="row mt-3">
                        <div class="col">
                            <label class="form-label" style="text-align: left;">Course Name</label>
                            <input type="text" name="Name" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <label class="form-label" style="text-align: left;">Course Description</label>
                            <input type="text" name="Description" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <label class="form-label" style="text-align: left;">Course Duration</label>
                            <input type="text" name="Duration" class="form-control" required />
                        </div>
                        <div class="col">
                            <label class="form-label" style="text-align: left;">Course Image</label>
                            <input type="file" name="photo" class="form-control" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <label class="form-label" style="text-align: left;">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" required />
                        </div>
                        <div class="col">
                            <label class="form-label" style="text-align: left;" >End Date</label>
                            <input type="date" name="EndDate" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <label class="form-label" style="text-align: left;" >Course Status</label>
                            <select name="Status" class="form-control">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <button type="submit" class="btn btn-primary w-100">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="courses-container" style="direction: ltr;">
        @Html.Partial("_Partial/Courses_partial", Model)
    </div>
</div>

<div class="modal" tabindex="-1" id="del" style="direction: ltr;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    let deleteId = 0;

    function setDeleteId(id) {
        deleteId = id;
    }

    function confirmDelete() {
        window.location.href = `/Course/DeleteCourse/${deleteId}`;
    }
</script>
